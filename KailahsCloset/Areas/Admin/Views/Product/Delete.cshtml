@model Product

<div class="container">
    <form method="post">
        <input asp-for="ProductId" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Product</h2>
                <hr />
            </div>
            <div class="mb-3 row p-1">
                <label class="form-label p-0">Product Name</label>
                <input class="form-control" asp-for="Name" disabled/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label class="form-label p-0">Brand Name</label>
                <input class="form-control" asp-for="Brand" disabled />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label class="form-label p-0">Size</label>
                <input class="form-control" asp-for="Size" disabled />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label class="form-label p-0">Product Description</label>
                <input class="form-control" asp-for="Description" disabled />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label class="form-label p-0">Price</label>
                <input class="form-control" asp-for="Price" disabled />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary form-control">Delete</button>
                </div>
                <div class="col-6">
                    <a class="btn btn-outline-secondary form-control"
                       asp-controller="Product"
                       asp-action="Index">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}