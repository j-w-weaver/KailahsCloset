@model Category

<div class="container">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Create Category</h2>
                <hr />
            </div>
            <div class="mb-3 row p-1">
                <label class="form-label p-0">Category Name</label>
                <input class="form-control" asp-for="Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label class="form-label p-0">Display Order</label>
                <input class="form-control" asp-for="DisplayOrder"/>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6">
                    <a class="btn btn-outline-secondary form-control"
                       asp-controller="Category"
                       asp-action="Index">
                        Back to List
                    </a>
                </div>
            </div>
            
            
        </div>
    </form>
</div>

@section Scripts{
    @{
       <partial name="_ValidationScriptsPartial"/>
    }
}